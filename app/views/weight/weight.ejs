<% for( let i = 0; i < trainings.length; i++ ) { %>
    <div class="exercise-box trainingList">
            <a class="trainingLink" href="/training/<%= encodeURIComponent(trainings[i].name) %> "><%= trainings[i].name %></a><br>
            <small class="datetime">Dodano: <%= trainings[i].added_dttm.toLocaleString('pl-PL', {
                weekday: 'long',
                day: 'numeric', 
                year: 'numeric', 
                month: 'long',
                hour: 'numeric',
                minute: 'numeric',
            } ) %></small>
        <form class = "deleteRepForm" method="POST" action="/training/<%= encodeURIComponent(trainings[i].name) %>?_method=DELETE">
            <button type="submit" class='close remove-rep'>&times;</button>
        </form>    
    </div>

<% } %>

